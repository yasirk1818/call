<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ConnectMe Chat</title>
    <link rel="stylesheet" href="/css/style.css">
    <!-- Font Awesome icons ke liye CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="app-container">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="sidebar-header">
                <div class="user-profile">
                     <!-- User's profile picture and name -->
                     <img src="https://i.pravatar.cc/40?u=<%= user.id %>" alt="avatar">
                     <h4><%= user.username %></h4>
                </div>
                <!-- Logout button -->
                <button id="logout-btn" title="Logout"><i class="fas fa-sign-out-alt"></i></button>
            </div>
            
            <!-- Area to show incoming friend requests -->
            <div id="requests-container" class="requests-container">
                <h5>Friend Requests</h5>
                <div id="pending-requests-list">
                    <!-- Pending requests will be dynamically inserted here -->
                </div>
            </div>
            
            <!-- Search bar for finding new users -->
            <div class="search-bar">
                <input type="text" id="search-input" placeholder="Search users by username">
                <!-- Search results will appear here -->
                <div id="search-results" class="search-results-list"></div>
            </div>

            <!-- List of friends/chats -->
            <ul class="friends-list" id="friends-list">
                <!-- Friends list will be dynamically inserted here -->
                <li class="no-friends">Loading friends...</li>
            </ul>
        </div>

        <!-- Main Chat Area -->
        <div class="chat-area hidden"> <!-- Initially hidden, shown when a chat is selected -->
            <div class="chat-header">
                <div class="friend-details">
                    <img id="chat-friend-avatar" src="https://via.placeholder.com/40" alt="avatar">
                    <p id="chat-friend-name" class="friend-name">Select a chat to start</p>
                </div>
                <div class="chat-icons">
                    <!-- Call icons -->
                    <i id="video-call-btn" class="fas fa-video" title="Video Call"></i>
                    <i id="voice-call-btn" class="fas fa-phone" title="Voice Call"></i>
                </div>
            </div>
            <div class="messages-area" id="messages-area">
                <!-- Messages will be displayed here -->
                <div class="start-chat-prompt">
                    <p>Select a friend from the list to start chatting.</p>
                </div>
            </div>
            <form class="message-input-area" id="message-form">
                <i class="fas fa-smile"></i>
                <input type="text" id="message-input" placeholder="Type a message" disabled>
                <button type="submit" disabled><i class="fas fa-paper-plane"></i></button>
            </form>
        </div>
    </div>

    <!-- Client-side libraries -->
    <script src="/socket.io/socket.io.js"></script>
    <!-- Main frontend logic file -->
    <script src="/js/chat.js"></script> 
</body>
</html>
